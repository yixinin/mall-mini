/* 页面基础样式 */
.goods-manage-page {
  padding: 20rpx;
  height: 100vh;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

/* 操作栏样式 */
.action-bar {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.search-box {
  position: relative;
  flex: 1;
  margin-right: 20rpx;
}

.search-input {
  height: 80rpx;
  background-color: #fff;
  border-radius: 40rpx;
  padding: 0 80rpx 0 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.search-icon {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 40rpx;
  height: 40rpx;
}

.add-btn {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  background-color: #1890ff;
  color: white;
  padding: 0 30rpx;
}

.add-btn::after {
  border: none;
}

/* 商品列表样式 */
.goods-list {
  height: calc(100vh - 120rpx);
}

.goods-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.goods-card.disabled {
  opacity: 0.7;
}

.goods-avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.goods-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.goods-name {
  font-size: 12px;
  color: #333;
  margin-bottom: 6px;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.goods-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
}

.goods-status.on {
  background-color: #f6ffed;
  color: #52c41a;
}

.goods-status.off {
  background-color: #fff2e8;
  color: #fa8c16;
}

.goods-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 15rpx;
}

.tag {
  font-size: 22rpx;
  color: #1890ff;
  background-color: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  margin-right: 10rpx;
  margin-bottom: 8rpx;
}

.goods-price-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-label {
  font-size: 26rpx;
  color: #666;
  margin-right: 10rpx;
}

.original-price {
  font-size: 26rpx;
  color: #999;
  text-decoration: line-through;
  margin-right: 10rpx;
}

.final-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
  margin-right: 20rpx;
}

.sales {
  font-size: 24rpx;
  color: #999;
}

.goods-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: auto;
}

.action-btn {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  margin-left: 15rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.action-btn.edit {
  background-color: #f5f5f5;
  color: #666;
}

.action-btn.on {
  background-color: #52c41a;
  color: white;
}

.action-btn.off {
  background-color: #fa8c16;
  color: white;
}

.action-btn.delete {
  background-color: #ff4d4f;
  color: white;
}

/* 空状态提示 */
.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 模态框样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  width: 80%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  z-index: 1000;
}

.modal-header {
  padding: 30rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
}

.modal-body {
  padding: 40rpx 30rpx;
  font-size: 28rpx;
  line-height: 1.6;
  text-align: center;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  border-radius: 0;
  border: none;
  margin: 0;
}

.modal-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  background-color: #ff4d4f;
  color: white;
}

.modal-btn::after {
  border: none;
}