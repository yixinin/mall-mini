/* 编辑页面基础样式 */
.goods-edit-page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

.form-container {
  flex: 1;
  padding: 20rpx;
}

/* 表单项样式 */
.form-item {
  margin-bottom: 30rpx;
  background-color: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.02);
}

.form-row {
  display: flex;
  justify-content: space-between;
}

.form-item.half {
  width: 48%;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 20rpx;
}

.form-input {
  font-size: 28rpx;
  height: 60rpx;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
}

/* 图片上传 */
.avatar-uploader {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.goods-avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
  background-color: #f5f5f5;
}

.upload-text {
  font-size: 26rpx;
  color: #999;
}

/* 标签输入 */
.tags-input {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.tag-item {
  display: flex;
  align-items: center;
  background-color: #e6f7ff;
  padding: 8rpx 15rpx;
  border-radius: 30rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}

.tag-item text {
  font-size: 24rpx;
  color: #1890ff;
}

.tag-close {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

.tag-input {
  font-size: 26rpx;
  height: 60rpx;
  min-width: 200rpx;
  border-bottom: 1rpx solid #eee;
  padding: 10rpx 0;
  margin-bottom: 15rpx;
}

/* 价格显示 */
.final-price {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: 500;
}

/* 单选组样式 */
.radio-group {
  display: flex;
}

.radio-label {
  margin-right: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

radio {
  margin-right: 10rpx;
  transform: scale(0.8);
}

/* 底部操作栏 */
.action-bar {
  height: 100rpx;
  display: flex;
  background-color: #fff;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  height: 100%;
  line-height: 100rpx;
  font-size: 30rpx;
  border-radius: 0;
  border: none;
  margin: 0;
}

.action-btn::after {
  border: none;
}

.action-btn.cancel {
  background-color: #f5f5f5;
  color: #666;
}

.action-btn.confirm {
  background-color: #1890ff;
  color: white;
}