.container {
  padding: 20rpx;
}

.tabs {
  display: flex;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  color: #666;
}

.tab.active {
  color: #07c160;
  border-bottom: 4rpx solid #07c160;
}

.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

.user-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  margin-bottom: 10rpx;
}

.time {
  font-size: 24rpx;
  color: #999;
}

.remove-btn {
  font-size: 24rpx;
  color: #f44336;
  background: none;
  border: 1rpx solid #f44336;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  margin-left: 20rpx;
}