/* 基础样式 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

/* 店铺卡片 */
.shop-card {
  display: flex;
  padding: 20rpx;
  margin: 20rpx;
  background: white;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.shop-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.shop-info {
  flex: 1;
}

.shop-header {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.shop-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-right: 16rpx;
}

.shop-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  color: white;
}

.shop-status.active {
  background: #07c160;
}

.shop-status.inactive {
  background: #ff4d4f;
}

.shop-status.pending {
  background: #faad14;
}

.shop-address {
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
}

.shop-address .icon {
  margin-right: 6rpx;
}

/* Tab栏 */
.tabs {
  display: flex;
  background: white;
  margin: 0 20rpx;
  border-radius: 12rpx 12rpx 0 0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #07c160;
  font-weight: 500;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background: #07c160;
  border-radius: 2rpx;
}

/* 内容区域 */
.content {
  flex: 1;
  background: white;
  margin: 0 20rpx 20rpx;
  border-radius: 0 0 12rpx 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.tab-content {
  padding: 20rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

/* 成员卡片 */
.member-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #fafafa;
  border-radius: 12rpx;
  position: relative;
}

.member-card.admin {
  border-left: 6rpx solid #07c160;
}

.member-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.member-info {
  flex: 1;
}

.member-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.member-meta {
  font-size: 24rpx;
  color: #999;
}

.member-phone, .member-email {
  margin-bottom: 4rpx;
}

.member-join-date {
  font-size: 22rpx;
}

.remove-btn {
  margin-left: 20rpx;
  font-size: 24rpx;
  color: #ff4d4f;
  background: none;
  border: 1rpx solid #ff4d4f;
  border-radius: 8rpx;
  padding: 8rpx 16rpx;
  line-height: 1;
}

/* 申请卡片 */
.application-card {
  display: flex;
  align-items: center;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: #fafafa;
  border-radius: 12rpx;
}

.applicant-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #eee;
}

.application-info {
  flex: 1;
}

.applicant-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.application-meta {
  font-size: 24rpx;
  color: #999;
}

.application-role {
  margin-bottom: 4rpx;
}

.application-date {
  font-size: 22rpx;
}

.application-actions {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.approve-btn, .reject-btn {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
  line-height: 1;
}

.approve-btn {
  color: #07c160;
  border: 1rpx solid #07c160;
  background: none;
}

.reject-btn {
  color: #ff4d4f;
  border: 1rpx solid #ff4d4f;
  background: none;
}